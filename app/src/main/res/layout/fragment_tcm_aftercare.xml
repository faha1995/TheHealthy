<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentBackGround"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.TcmAftercareActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textColor="@color/secondaryColor"
            android:text="儿童中医药健康管理"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryColor"
                android:text="随访医生：" />

            <TextView
                android:id="@+id/doctor_signature"
                android:layout_width="wrap_content"
                android:textColor="@color/secondaryColor"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/secondaryColor"
                android:text="随访日期：" />

            <TextView
                android:id="@+id/visit_date"
                android:layout_width="wrap_content"
                android:textColor="@color/secondaryColor"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    <!-- <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:background="@color/bg"
         android:paddingLeft="16dp"
         android:paddingTop="5dp"
         android:paddingBottom="5dp"
         android:layout_marginTop="25dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="月龄/年龄："/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="6月龄"
             android:id="@+id/textView738"/>

     </LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/bg"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="16dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/secondaryColor"
            android:layout_height="wrap_content"
            android:text="中医药健康管理服务：" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/guide"
            android:layout_width="wrap_content"
            android:textColor="@color/secondaryColor"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/guide_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryColor"
            android:layout_marginLeft="10dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/bg"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="16dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryColor"
            android:text="下次随访日期：" />

        <TextView
            android:id="@+id/next_visit_date"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:textColor="@color/secondaryColor"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
