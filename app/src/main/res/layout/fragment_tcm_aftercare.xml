<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_tcm_aftercare"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentBackGround"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.TcmAftercareActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/text_tcm_after_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textColor="@color/secondaryColor"
            android:textSize="19sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="随访医生："
                android:textSize="@dimen/health_report_infor_secondTitle_textSize"
                android:textColor="@color/health_infor_nameTextColor" />

            <TextView
                android:id="@+id/doctor_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/health_report_infor_secondTitle_textSize"
                android:textColor="@color/personalInforRelativeBackground"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="随访日期："
                android:textSize="@dimen/health_report_infor_secondTitle_textSize"
                android:textColor="@color/health_infor_nameTextColor" />

            <TextView
                android:id="@+id/visit_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/health_report_infor_secondTitle_textSize"
                android:textColor="@color/personalInforRelativeBackground" />

        </LinearLayout>

    </LinearLayout>
