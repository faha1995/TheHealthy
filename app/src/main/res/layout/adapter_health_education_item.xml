<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="@dimen/health_report_adapter_cardView_margin"
        android:layout_marginRight="@dimen/health_report_adapter_cardView_margin"
        android:layout_marginTop="@dimen/health_report_adapter_cardView_margin"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.4">

                <TextView
                    android:id="@+id/text_healthEducationAdapter_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/adapter_health_report_view_marginLeft_tight"
                    android:layout_marginTop="@dimen/adapter_health_report_view_marginLeft_tight"

                    android:text="高血压的治疗指导"
                    android:textColor="@color/mainColor"
                    android:textSize="@dimen/adapter_health_report_title_textSize"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.2">

                <TextView
                    android:id="@+id/text_healthEducationAdapter_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/health_report_adapter_cardView_margin"
                    android:layout_marginRight="@dimen/health_report_adapter_cardView_margin"
                    android:ellipsize="end"
                    android:maxEms="14"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text="1、尽早治疗
                    高血压是中老年人的高发疾病，一旦出现经常性头晕。。。"
                    android:textColor="@color/secondaryColor"
                    android:textSize="@dimen/adapter_health_report_doctor_textSize" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/text_healthEducationAdapter_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/adapter_health_report_doctor_margin"

                    android:textColor="@color/secondaryColor" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
