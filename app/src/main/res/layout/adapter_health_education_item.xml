<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="@dimen/health_report_adapter_cardView_margin"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


                <TextView
                    android:id="@+id/text_healthEducationAdapter_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="@dimen/adapter_health_report_view_marginLeft_tight"
                    android:text="高血压的治疗指导"
                    android:textColor="@color/mainColor"
                    android:textSize="@dimen/adapter_health_report_title_textSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_healthEducationAdapter_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/health_report_adapter_cardView_margin"
                    android:maxEms="15"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="1、尽早治疗
                    高血压是中老年人的高发疾病，一旦出现经常性头晕。。。"
                    android:textColor="@color/secondaryColor"
                    android:textSize="@dimen/adapter_health_report_doctor_textSize" />

                <TextView
                    android:id="@+id/text_healthEducationAdapter_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/adapter_health_report_title_marginTop"
                    android:text="17:00:03  2016-01-26"
                    android:textColor="@color/secondaryColor" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
