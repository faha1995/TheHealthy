<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentBackGround">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/health_report_adapter_cardView_margin"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_EducationInfor_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/educationInfor_title_margin"
                        android:text="高血压的治疗指导"
                        android:textColor="@color/mainColor"
                        android:textSize="@dimen/adapter_health_report_title_textSize"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_EducationInfor_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_EducationInfor_title"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/educationInfor_title_margin"
                        android:layout_marginRight="@dimen/educationInfor_title_margin"
                        android:layout_marginTop="@dimen/educationInfor_title_margin"
                        android:text="1、尽早治疗
                    高血压是中老年人的高发疾病，一旦出现经常性头晕。。。"
                        android:textColor="@color/secondaryColor"
                        android:textSize="@dimen/adapter_health_report_doctor_textSize" />

                    <TextView
                        android:id="@+id/text_EducationInfor_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/text_EducationInfor_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/adapter_health_report_doctor_margin"
                        android:layout_marginTop="30dp"
                        android:text="16:22:55"
                        android:textColor="@color/secondaryColor" />

                    <TextView
                        android:id="@+id/text_EducationInfor_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/text_EducationInfor_time"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/adapter_health_report_doctor_margin"
                        android:layout_marginRight="@dimen/adapter_health_report_doctor_margin"
                        android:layout_marginTop="@dimen/educationInfor_date_marginTop"
                        android:text="2016-01-23"
                        android:textColor="@color/secondaryColor" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
