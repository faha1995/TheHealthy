<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="@dimen/health_report_adapter_cardView_marginTop"
        app:background="@color/colorWhite"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="服务评价"
                android:textSize="16sp"
                android:textColor="@color/mainColor"
                android:layout_margin="8dp"
                android:gravity="center"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_unKnow"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="不知情"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_shape_register"
                    />
                <Button
                    android:id="@+id/btn_general"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="一般"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_shape_register"
                    />
                <Button
                    android:id="@+id/btn_great"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="很好"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_shape_register"
                    />


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
