<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.thehealthy">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- 设置程序适应的手机屏幕 -->
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask">


        </activity>

        <activity
            android:name=".activity.inforactivity.LoginActivity"
            android:launchMode="singleTop">

        </activity>
        <activity
            android:name=".activity.inforactivity.RegisterActivity"
            android:launchMode="singleTop"></activity>
        <activity android:name=".activity.TestActivity"></activity>

        <activity android:name=".activity.inforactivity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <!--<receiver android:name=".broadcast.NetBroadcastReceiver">-->
